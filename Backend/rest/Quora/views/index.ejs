<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quora Posts</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Quora Posts</h1>

    <!-- Loop through posts and display them -->
    <% posts.forEach(post => { %>
        <div class="postdiv">
            <h4 class="username"><%= post.username %></h4>
            <h5 class="content"><%= post.content %></h5>
            <a href="http://localhost:3000/posts/<%= post.id %>">See Post</a>
            <a href="http://localhost:3000/posts/<%= post.id %>/edit">Edit Post</a>
        </div>

    <% }) %>

    <br>
    <br><br>
    <button>
        <a href="http://localhost:3000/posts/new">Create New post</a>
    </button>
</body>
</html>
